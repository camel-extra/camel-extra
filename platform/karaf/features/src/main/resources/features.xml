    <feature version='${camel-version}'>camel</feature>
    <bundle>mvn:org.apache-extras.camel-extra/camel-db4o/${project.version}</bundle>
    <bundle dependency='true'>mvn:com.db4o/db4o-core-java5/${db4o-version}</bundle>
